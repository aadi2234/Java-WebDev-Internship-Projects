package functions;

import java.io.IOException;
import java.sql.Connection;
import java.sql.PreparedStatement;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import connectionDB.MysqlCon;

/**
 * Servlet implementation class RegisterStation
 */
public class RegisterStation extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public RegisterStation() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		response.getWriter().append("Served at: ").append(request.getContextPath());
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
		
		String sname,address,city,taluka,district,otime,ctime,mob,lati,longi,password,power;
		sname = request.getParameter("sname");
		address = request.getParameter("address");
		city = request.getParameter("city");
		taluka = request.getParameter("taluka");
		district = request.getParameter("district");
		otime = request.getParameter("otime");
		ctime = request.getParameter("ctime");
		mob = request.getParameter("mob");
		lati = request.getParameter("lati");
		longi = request.getParameter("longi");
		password = request.getParameter("password");
		power = request.getParameter("power");
		
		try
		{
			Connection con = MysqlCon.getCon();
			PreparedStatement ps1 = con.prepareStatement("insert into register_cs values(?,?,?,?,?,?,?,?,?,?,?,?)");
			ps1.setString(1, sname);
			ps1.setString(1, address);
			ps1.setString(1, city);
			ps1.setString(1, taluka);
			ps1.setString(1, district);
			ps1.setString(1, otime);
			ps1.setString(1, ctime);
			ps1.setString(1, mob);
			ps1.setString(1, lati);
			ps1.setString(1, longi);
			ps1.setString(1, password);
			ps1.setString(1, power);
			int i = ps1.executeUpdate();
			if(i>0)
			{
				response.sendRedirect("demo.html");
			}
			else
			{
				response.sendRedirect("addnewstation.html");
			}
		}
		catch(Exception e)
		{
			e.printStackTrace();
		}
	}

}
